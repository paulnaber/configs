    // comments for example are italic and therefore look very nice
    // "editor.fontSize": 14,
    // "editor.fontWeight": "400",
    // "editor.fontFamily": "Operator Mono", // always best
    // "editor.cursorSurroundingLines": 8,
    // "window.commandCenter": false,

    // JetBrains Mono
    // https://www.jetbrains.com/de-de/lp/mono/
    // "editor.fontFamily": "JetBrains Mono",
    // "editor.fontSize": 13,
    // "editor.fontWeight": "400",
    // "editor.fontLigatures": "'calt', 'liga', 'ss03', 'ss04', 'ss06'",

    // Monaspace
    // https://monaspace.githubnext.com/
